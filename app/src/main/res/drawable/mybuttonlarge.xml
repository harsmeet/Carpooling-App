<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="5dip" />
         <stroke android:width="10dip" android:color="#FFD033" />
         <gradient android:angle="-90" android:startColor="#FFD033" android:endColor="#FFD033"  />
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="5dip" />
         <stroke android:width="10dip" android:color="#33FFD0" />
         <solid android:color="#33FFD0"/>
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="5dip" />
         <stroke android:width="10dip" android:color="#33C8FF" />
         <gradient android:angle="-90" android:startColor="#33C8FF" android:endColor="#33C8FF" />
     </shape>
 </item>
</selector>